
execute pathogen#infect()

syntax on 

set background=dark
let g:solarized_termcolors = 256
let g:solarized_visibility = "high"
let g:solarized_contrast = "high"
colorscheme solarized

filetype plugin indent on
set encoding=utf-8
set wrap
set linebreak
set backspace=indent,eol,start
set autoindent
set copyindent
set number
set rnu
set shiftround
set ignorecase
set smartcase
set history=1000
set undolevels=1000
set title
set visualbell
set noerrorbells
set ttyfast
set mouse=
set nocompatible
set nobackup
set noswapfile
set fileformats=unix,dos,mac
set laststatus=2
set expandtab
set softtabstop=4 tabstop=4 shiftwidth=4
set ruler
